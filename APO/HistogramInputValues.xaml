<Window x:Class="APO.HistogramInputValues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APO"
        mc:Ignorable="d"
        Title="HistogramInputValues" Height="200" Width="300">
    <Grid Margin="0,0,0,1">
        <Label Content="Histogram ranges:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="30" Width="107"/>
        <Label Content="Minimum value:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Maximum value:" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" x:Name="minValue" Margin="106,49,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="84" Foreground="Black" Visibility="Visible"/>
        <TextBox HorizontalAlignment="Left" x:Name="maxValue" Margin="106,80,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" Width="84"/>
        <Button Content="Apply" x:Name="applyButton" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="180" Click="ApplyButton_Click"/>

    </Grid>
</Window>
